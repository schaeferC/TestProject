<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/mealtable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/salads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView 
                android:id="@+id/saladstext"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"  
            	/>
                
        </TableRow>

        <TableRow
            android:id="@+id/actionstand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView 
                android:id="@+id/actionstandtext"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"  
            	/>
            
        </TableRow>

        <TableRow
            android:id="@+id/food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView 
                android:id="@+id/foodtext"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"  
            	/>
            
        </TableRow>

        <TableRow
            android:id="@+id/foodfixings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView 
                android:id="@+id/foodfixingstext"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"  
            	/>
            
        </TableRow>
        
        <TableRow
            android:id="@+id/desserts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView 
                android:id="@+id/dessertstext"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"  
            	/>
            
        </TableRow>
        
        <TableRow
            android:id="@+id/tagging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView 
                android:id="@+id/taggingtext"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"  
            	/>
            
        </TableRow>
    </TableLayout>


</LinearLayout>